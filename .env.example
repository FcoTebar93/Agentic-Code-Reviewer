QDRANT_URL=http://qdrant:6333
REDIS_URL=redis://:changeme_redis@redis:6379/0
MEMORY_SERVICE_URL=http://memory_service:8000

# --- LLM Configuration ---
LLM_PROVIDER=mock
OPENAI_API_KEY=

# --- GitHub (optional, required for real PR creation) ---
