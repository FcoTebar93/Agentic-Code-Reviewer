# --- PostgreSQL ---
POSTGRES_USER=admadc
POSTGRES_PASSWORD=changeme_postgres
POSTGRES_DB=admadc

# --- RabbitMQ ---
RABBITMQ_DEFAULT_USER=admadc
RABBITMQ_DEFAULT_PASS=changeme_rabbitmq

# --- Redis ---
REDIS_PASSWORD=changeme_redis

# --- Composed URLs (used by application services) ---
RABBITMQ_URL=amqp://admadc:changeme_rabbitmq@rabbitmq:5672/
